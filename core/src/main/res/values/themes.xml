<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Base.Theme.CourseHub" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary_button</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.CourseHub" parent="Base.Theme.CourseHub" />

    <!-- Стиль для полей ввода -->
    <style name="CourseHubEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/hint_color</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <!-- Добавляем отступы для текста -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="CourseHubButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <!-- Стиль для текстовых ссылок -->
    <style name="CourseHubTextLink">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль для поисковой строки -->
    <style name="CourseHubSearchInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#24252A</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">#919295</item>
        <item name="android:textColorHint">#919295</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">28dp</item>
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="boxCornerRadiusBottomEnd">28dp</item>
    </style>
</resources>
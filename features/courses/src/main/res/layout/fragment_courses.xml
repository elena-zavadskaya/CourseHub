<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Поисковая строка с фильтром -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Поисковая строка с собственным стилем -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchInputLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="@style/CourseHubSearchInput"
            app:startIconDrawable="@drawable/ic_search_with_padding"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search courses..."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:paddingHorizontal="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка фильтра с круглым фоном без обводки -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/filterButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="#24252A"
            app:strokeWidth="0dp"
            android:layout_marginTop="2dp">

            <ImageButton
                android:id="@+id/filterImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_filter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="center" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Строка сортировки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Пустое пространство слева -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Надпись справа -->
        <TextView
            android:id="@+id/sortText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="По дате обновления"
            android:textColor="#12B956"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- Иконка сортировки -->
        <ImageButton
            android:id="@+id/sortButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center" />
    </LinearLayout>

    <!-- ProgressBar для отображения загрузки -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- RecyclerView для списка курсов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/coursesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        tools:listitem="@layout/item_course" />

</LinearLayout>
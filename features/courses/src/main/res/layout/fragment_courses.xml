<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Поисковая строка с фильтром -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Поисковая строка -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="@style/CourseHubEditText"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search courses..."
                android:textColor="@color/white"
                android:textColorHint="#919295"
                android:textSize="14sp"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка фильтра -->
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_filter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:backgroundTint="#32333A" />
    </LinearLayout>

    <!-- Строка сортировки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="По дате добавления"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center" />
    </LinearLayout>

    <!-- Заглушка для будущего списка курсов -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Здесь будет список курсов"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="32dp" />

</LinearLayout>
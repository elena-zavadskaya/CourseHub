<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInactive</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="BottomNavigationTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
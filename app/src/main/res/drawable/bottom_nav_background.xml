    <!-- Верхняя оконтовка -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:height="1.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#4D555E" />
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.auth.presentation.login.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_loginFragment_to_coursesFragment"
            app:destination="@id/coursesFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/coursesFragment"
        android:name="com.example.courses.presentation.list.presentation.CoursesFragment"
        android:label="CoursesFragment" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.favorites.presentation.FavoritesFragment"
        android:label="FavoritesFragment" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.account.AccountFragment"
        android:label="AccountFragment" />

    <!-- Глобальные действия для навигации -->
    <action
        android:id="@+id/action_global_coursesFragment"
        app:destination="@id/coursesFragment"
        app:popUpTo="@id/coursesFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_favoritesFragment"
        app:destination="@id/favoritesFragment"
        app:popUpTo="@id/favoritesFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_accountFragment"
        app:destination="@id/accountFragment"
        app:popUpTo="@id/accountFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/loginFragment"
        app:popUpToInclusive="true" />

</navigation>